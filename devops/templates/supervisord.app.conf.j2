[supervisord]
directory={{ APP_DIR }}
stdout_logfile={{ APP_DIR }}/log/%(program_name)s.log
stderr_logfile={{ APP_DIR }}/log/%(program_name)s.log

[rpcinterface:supervisor]
supervisor.rpcinterface_factory = supervisor.rpcinterface:make_main_rpcinterface

[inet_http_server]         ; inet (TCP) server disabled by default
port=127.0.0.1:9012        ; (ip_address:port specifier, *:port for all iface)

[supervisorctl]
serverurl=http://127.0.0.1:9012 ; use an http:// url to specify an inet socket

[group:{{ APP_NAME }}]
programs=gunicorn, celery, yalicaregunicorn

[program:gunicorn]
user={{ APP_USER }}
directory={{ APP_DIR }}
environment=DJANGO_SETTINGS_MODULE="settings.{{ APP_ENVIRONMENT }}"
command=authbind {{ APP_VIRTUALENV }}/bin/gunicorn wsgi:application
    --workers={{ GUNICORN_WORKERS }}
    --bind="0.0.0.0:{{ APP_PORT }}"
     --access-logfile {{ APP_DIR }}/log/%(program_name)s_access.log
stdout_logfile={{ APP_DIR }}/log/%(program_name)s.log
stderr_logfile={{ APP_DIR }}/log/%(program_name)s.log
autorestart=true
stopasgroup=true
startsecs=5

[program:celery]
user={{ APP_USER }}
command={{ APP_VIRTUALENV }}/bin/celery worker --app=core --loglevel=INFO --beat --events --concurrency={{ CELERY_WORKERS }}
directory={{ APP_DIR }}
environment=DJANGO_SETTINGS_MODULE="settings.{{ APP_ENVIRONMENT }}"
stdout_logfile={{ APP_DIR }}/log/%(program_name)s.log
stderr_logfile={{ APP_DIR }}/log/%(program_name)s.log
autorestart=true
stopasgroup=true
startsecs=5

[program:yalicaregunicorn]
user=root
directory=/home/root/yalicare
environment=DJANGO_SETTINGS_MODULE="settings.staging"
command=authbind /home/root/.virtualenvs/yalicare/bin/gunicorn wsgi:application
    --workers=2
    --bind="0.0.0.0:7000"
     --access-logfile /home/root/yalicare/log/%(program_name)s_access.log
stdout_logfile=/home/root/yalicare/log/%(program_name)s.log
stderr_logfile=/home/root/yalicare/log/%(program_name)s.log
autorestart=true
stopasgroup=true
startsecs=5
